<div class="all-products-section">
  <h2 class="all-products-section__title">Our Products</h2>
  <div class="all-products-section__grid">
    {% for product in collections.all.products %}
      {% render 'product-card', product: product %}
    {% else %}
      <p>No products found.</p>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "All Products",
  "settings": [],
  "presets": [
    {
      "name": "All Products",
      "category": "Custom"
    }
  ]
}
{% endschema %}
