<div class="gift-card">
  <h1>Gift Card</h1>

  <div class="gift-card__code">
    <h2>Your Gift Card Code:</h2>
    <p>{{ gift_card.code }}</p>
  </div>

  <div class="gift-card__details">
    <h3>Recipient Information:</h3>
    {% if gift_card.customer %}
      <p>Recipient: {{ gift_card.customer.name }}</p>
      <p>Message: {{ gift_card.note }}</p>
    {% else %}
      <p>No recipient information available.</p>
    {% endif %}
  </div>

  <div class="gift-card__expiry">
    {% if gift_card.expires_on %}
      <p>This gift card expires on {{ gift_card.expires_on | date: '%B %d, %Y' }}.</p>
    {% else %}
      <p>This gift card never expires.</p>
    {% endif %}
  </div>

  <div class="gift-card__balance">
    <h3>Balance:</h3>
    <p>${{ gift_card.balance | money }}</p>
  </div>
</div>
